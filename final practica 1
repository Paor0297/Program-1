#include "stdafx.h"
#include <iostream>
#define MAX 1000
#include "conio.h"
using namespace std;
void mostrar( int vector[MAX], int tam);
void main()
{
	int A[MAX], j = 0, v;
	cout<< "asignar los valores del vector"<<endl;
	cin>>v;
	for (int i = 0; i < 1000; i++)
	{
		if (j%v == 0) j = 0;
		A[i] = j;
		j++;
	}
	
	for(int i = 0; i < 1000; i++) cout<< "A[" << i << "] = " << A[i] << endl;
	getch();
}


