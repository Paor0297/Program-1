// salario bruto.cpp : Defines the entry point for the console application.
//Pablo Ortiz

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define iva 0.13
#define afp 0.1271

using namespace std;

 void main()
{
  int n,i;
  float sb,sn;
  cout<< "ingrese numeros de empleados"<< endl;
  cin>> n;
  for (i=1;i<=n;i++)
	  {
		  cout<<"salario bruto:"<<endl;
		  cin>> sb;
		  if (sb>=7000)
			  sn<- sb-(iva+afp)+sb;
		  else
			  sn<- sb-afp+sb;
		  cout<< sn;
  }
getch();
 }
