// vectores practica 1.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define max 100
 using namespace std;
 void cargar (double a[],int tam);
 void mostrar (double a[], int tam);
 double promedio (double a[], int tam);
 void main()
 {
	double vec [max], prom;
	int tam,n;
	do
	{
		cout<<" ingrese el numero de elementos del vector: ";
		cin>>n;

	}while ((0>=n) || (n>=100));
	cargar (vec,n);
	mostrar (vec,n);
	prom = promedio (vec,n);
	cout<<" el valor del promedio es: "<< prom<< endl;
	getch();
 }

 void cargar (double a[],int tam)
 {
	 for (int i=0;i<tam;i++)
	 {
		 cout<<"a["<<i<<"]=";
		 cin>> a[i];
	 }
 }
 void mostrar (double a[], int tam)
 {
	 
	 for (int i=0;i<tam;i++)
	 {
		 cout<<"a["<<i<<"]="<< a[i]<<endl;
	 }
 }
 double promedio (double a[], int tam)
 {
	 double p=0;
	 for (int i=0;i<tam;i++)
	 
		 p=p+a[i];
	 return (p/tam);	 
 }
